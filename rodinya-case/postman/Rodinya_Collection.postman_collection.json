                  "    pm.environment.set('refresh_token', res.data.refreshToken);",
                  "    pm.test('Token yenileme başarılı', () => pm.response.to.have.status(200));",
                  "} else {",
                  "    pm.test('Refresh hatası: ' + JSON.stringify(res.message), () => false);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
